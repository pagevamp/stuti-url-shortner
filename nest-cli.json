{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "config/**.hbs", "outDir": "dist" },
      { "include": "assets/**/*", "outDir": "dist" }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
